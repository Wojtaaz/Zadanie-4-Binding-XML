<Window x:Class="WpfApp2.KategoriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategoria" Height="300" Width="400">
    <Grid>
        <TextBlock Text="{Binding Nazwa}" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="{Binding Opis}" Margin="10,40,10,10"/>
        <ListBox ItemsSource="{Binding Podkategorie}" DisplayMemberPath="Nazwa" SelectionChanged="ListBox_SelectionChanged"/>
    </Grid>
</Window>
